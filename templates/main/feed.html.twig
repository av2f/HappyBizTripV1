{% extends 'base.html.twig' %}

{% block title %} {{ 'feed.block.title'|trans|raw }} {% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('styles/feed') }}
    {% if (app.session.flashbag.peek('success')|length >0) or (app.session.flashbag.peek('warning')|length >0) %}
      {{ encore_entry_link_tags('styles/sweetalert2') }}
    {% endif %}
{% endblock %}


{% block body %}
  <div class="container">
    {# Handle notifications #}
    {% include 'partials/_notification_feed.html.twig' %}
    <div class="d-flex justify-content-center pt-2">
      <div class="row">
        {# diplay the profile info #}
        <div class="col-12 col-lg-3 col-md-6">
          {% include 'partials/_profile_feed.html.twig' %}
        </div>
        <div class="col-12 col-lg-6 col-md-6">
          <div class="card mt-3">
            <div class="card-header">
              Quote
            </div>
            <div class="card-body">
              <blockquote class="blockquote mb-0">
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.</p>
                <footer class="blockquote-footer">Someone famous in <cite title="Source Title">Source Title</cite></footer>
              </blockquote>
            </div>
          </div>
        </div>
        <div class="col-12 col-lg-3 col-md-6">
          <div class="card mt-3">
            <div class="card-header">
              Quote
            </div>
            <div class="card-body">
              <blockquote class="blockquote mb-0">
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.</p>
                <footer class="blockquote-footer">Someone famous in <cite title="Source Title">Source Title</cite></footer>
              </blockquote>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {% if (app.session.flashbag.peek('success')|length >0) or (app.session.flashbag.peek('warning')|length >0) %}
    {# script for toast notification #}
    {{ encore_entry_script_tags('js/toast') }}
  {% endif %}
{% endblock %}
