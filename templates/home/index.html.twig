{% extends 'base.html.twig' %}

{# use macro to customize the render of the form #}
{% import 'macros/formRender.html.twig' as fieldRender %}
 
{% block title %} {{ 'home.block.title'|trans|raw }} {% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('styles/home') }}
    {{ encore_entry_link_tags('styles/datepicker') }}
{% endblock %}

{% block body %}
  <main>
    <div class="home-jumbo p-5 mb-4">
      <div class="container-fluid py-5">
        <div class="row align-items-center">
          <div class="col-md-7">
              <h1 class="display-4 home-title">{{ 'home.title'|trans|raw }}</h1>
              <p class="lead home-title home-subtitle">{{ 'home.subtitle'|trans|raw }}</p>
              <img class="home-img" src="{{ asset('img/library/imgHomepage.png') }}" alt="">
          </div>
          <div class="col-md-4">
            <div class="card mt-1">
              <div class="card-header text-center card-entete">
                <h4>{{ 'form.register.title'|trans|raw }}</h4>
                <h4>{{ 'form.register.subtitle'|trans|raw }}</h4>
              </div>
              {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                  <div class="card-body">
                      {{ fieldRender.formFieldRender('firstName', form.firstName, 'home_register') }}
                      {{ fieldRender.formFieldRender('email', form.email, 'home_register') }}
                      {{ fieldRender.formDateRender('birthDate', form.birthDate, 'home_register') }}
                      {{ fieldRender.formFieldRender('password', form.password, 'home_register') }}
                  </div>
                  <div class="card-footer text-center">
                    <div class="d-grid gap-2 mx-auto">
                        <button type="submit" class="btn btn-register">{{ 'form.btn.register'|trans|raw }}</button>
                    </div>
                  </div>
              {{ form_end(form) }}              
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <p class="concept-title">{{ 'home.concept.title'|trans|raw }}</p>
      <p>
