          <div class="col-md-4 col-lg-4">
              <div class="card mb-3">
                  <div class="card-header">
                      {{ 'subscription.type_temporary'|trans|raw }}
                  </div>
                  <div class="card-body">
                      <span class="card-title">25,99 &euro;</span>
                      <span class="frequency"> / mois</span>
                      <hr>
                      <h6 class="card-text">Engagement minimum de 3 mois</h6>
                  </div>
              </div>
          </div>
          <div class="col-md-4 col-lg-4">
              <div class="card mb-3">
                  <div class="card-header">
                      {{ 'subscription.type_regular'|trans|raw }}
                  </div>
                  <div class="card-body">
                      <span class="card-title">20,99 &euro;</span>
                      <span class="frequency"> / mois</span>
                      <hr>
                      <h6 class="card-text">Engagement minimum de 6 mois</h6>
                  </div>
              </div>
          </div>
          <div class="col-md-4 col-lg-4">
              <div class="card mb-3">
                  <div class="card-header">
                      {{ 'subscription.type_permanent'|trans|raw }}
                  </div>
                  <div class="card-body">
                      <span class="card-title">17,99 &euro;</span>
                      <span class="frequency"> / mois</span>
                      <hr>
                      <h6 class="card-text">Engagement minimum de 12 mois</h6>
                  </div>
