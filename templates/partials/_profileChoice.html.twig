{% block _edit_profile_gender_widget %}
    <div class="form-group mb-2">
        <div class="row">
            <div class="col-12 col-md-auto col-lg-auto">
                {{ form_label(form) }}
            </div>
            {% for key,choice in form.vars.choices %}
                {% set icon = "fas fa-male" %}
                {% if choice.value == "W" %}
                    {% set icon = "fas fa-female" %}
                {% endif %}
                <div class="col-12 col-md-auto col-lg-auto form-check">
                    <input class="form-check-input" type="radio" id="{{ form.vars.id }}_{{ key }}" name="{{ form.vars.full_name }}" value="{{ choice.value }}" {% if choice.value is same as (app.user.gender) %}checked{% endif %}>
                    <label class="form-check-label label-profile" for "{{ form.vars.id }}_{{ key }}">
                        <i class="{{ icon }} me-1"></i>{{ choice.label|trans|raw }}
                    </label>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block _edit_profile_situation_widget %}
    <div class="form-group mb-2">
        <div class="row">
            <div class="col-12 col-md-auto col-lg-auto">
                {{ form_label(form) }}
            </div>
            {% for key,choice in form.vars.choices %}        
                {% set icon = "fas fa-user-alt" %}
                {% if choice.value == "C" %}
                    {% set icon = "fas fa-user-friends" %}     
                {% endif %}
                <div class="col-12 col-md-auto col-lg-auto form-check">
                    <input class="form-check-input" type="radio" id="{{ form.vars.id }}_{{ key }}" name="{{ form.vars.full_name }}" value="{{ choice.value }}" {% if choice.value is same as (app.user.situation) %}checked{% endif %}>
                    <label class="form-check-label label-profile" for "{{ form.vars.id }}_{{ key }}">
                        {% if choice.value !="K" %}<i class="{{ icon }} me-1"></i>{% endif %}{{ choice.label|trans|raw }}
                    </label>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}